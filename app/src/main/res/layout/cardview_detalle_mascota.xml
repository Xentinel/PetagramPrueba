<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    card_view:cardCornerRadius ="@dimen/card_radius_dimen"
    android:id="@+id/cvDetalleMascota"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/margenCV"
        android:orientation="vertical">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:scaleType="centerCrop"
            android:id="@+id/cvFotoDetMasc"
            android:src="@drawable/conejo"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:padding="@dimen/cvPaddingHorizontalLayout"
            >
            <ImageButton
                android:layout_width="@dimen/tamanioHuesoBco"
                android:layout_height="match_parent"
                android:id="@+id/cvHuesoLike"
                android:background="@drawable/hueso"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/margenCV"
                android:id="@+id/cvNombreMascota"
                android:textSize="@dimen/cvTextSize"
                android:textStyle="bold"
                android:textAlignment="center"
                android:layout_marginTop="@dimen/margenCV"
                android:text="Conejo"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="right"
                android:layout_weight="1"
                android:layout_marginTop="@dimen/margenCV"
                android:layout_marginRight="@dimen/margenCV"
                android:textSize="@dimen/cvTextSize"
                android:textStyle="bold"
                android:id="@+id/cvNumLikes"
                android:text="5"
                 />
            <ImageButton
                android:layout_width="36dp"
                android:layout_height="match_parent"
                android:id="@+id/cvHuesoAddFav"
                android:background="@drawable/huesoamarillo"
                android:layout_marginTop="@dimen/margenCV"/>
        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>